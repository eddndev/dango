    {
        image: "/images/ui/noticias/Line_Up.webp",
        link: "https://www.instagram.com/p/DRctIzliHba/",
        alt: "Line Up"
    },
    {
        image: "/images/ui/noticias/Fan.webp",
        link: "https://www.instagram.com/p/DP-Kz95DJUS/?img_index=1",
        alt: "Fan"
    },
    {
        image: "/images/ui/noticias/Artista.webp",
        link: "https://www.instagram.com/p/DSbBXTNjaZT/",
        alt: "Artista"
    },
    {
        image: "/images/ui/noticias/Dango.webp",
        link: "https://www.instagram.com/p/DR8JnKtDOi6/",
        alt: "Dango"
    },
    {
        image: "/images/ui/noticias/Boletoos.webp",
        link: "https://www.instagram.com/p/DRx1cCnDA77/?img_index=2",
        alt: "Boletos"
    },
    {
        image: "/images/ui/noticias/Amor.webp",
        link: "https://www.instagram.com/p/DRQ202qDPRA/",
        alt: "Amor"
    }
];
---

<section id="noticias" class="news-section">
    <div class="container mx-auto px-4 pt-20 pb-10">
        <!-- Section Header -->
        <div class="mb-8">
            <h2 class="section-title">
                ENTERATE DE TODAS <br />
                <span class="text-white">NUESTRAS ULTIMAS NOTICIAS</span>
            </h2>
        </div>
    </div>

    <!-- News Grid: Full Width, No Gap -->
    <div
        class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 w-full gap-0"
    >
        {
            newsItems.map((item, i) => {
                // Logic to hide orphans on specific breakpoints
                // Item index 4 (5th item): Hide on md (4 cols) -> Show on lg (5 cols)
                // Item index 5 (6th item): Hide on md (4 cols) & lg (5 cols) -> Show on xl (6 cols)
                let visibilityClass = "block";
                if (i === 4) visibilityClass = "block md:hidden lg:block";
                if (i === 5)
                    visibilityClass = "block md:hidden lg:hidden xl:block";

                return (
                    <a 
                        href={item.link} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class={`news-item ${visibilityClass}`}
                    >
                        <img 
                            src={item.image} 
                            alt={item.alt} 
                            class="news-img"
                            loading="lazy"
                        />
                    </a>
                );
            })
        }
    </div>
</section>

<style>
    .news-section {
        min-height: 50vh; /* Adjust as needed, doesn't need to be full screen necessarily */
        background-color: #000;
        color: white;
    }

    .section-title {
        font-family: var(--font-kismis);
        font-size: clamp(2rem, 5vw, 4rem);
        line-height: 1;
        color: var(--color-dango-purple); /* Or specific color from design */
        text-transform: uppercase;
    }

    .section-title span {
        color: #fff;
    }

    .news-item {
        aspect-ratio: 9 / 16; /* Taller vertical format (Story style) */
        width: 100%;
        background-color: #1a1a1a;
        overflow: hidden;
        /* Border removed for seamless look or keep strictly if "instagram style" implies separation? "No debe haber gap" implies seamless */
        position: relative;
        display: block;
    }

    .news-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .news-item:hover .news-img {
        transform: scale(1.1);
    }
</style>
